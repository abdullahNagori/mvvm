<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/zxing_transparent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/margin_small"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:strokeWidth="@dimen/_1sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/close_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/margin_normal"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                style="@style/hdngText"
                android:layout_gravity="center"
                android:text="@string/search" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/categoryLL"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_holo_black">

                <Spinner
                    android:id="@+id/select_category"
                    style="@style/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/select_search" />

            </RelativeLayout>

            <EditText
                android:id="@+id/searched_query"
                style="@style/customerInfoInputFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:hint="@string/search_here"
                android:inputType="text"
                />

            <Button
                android:id="@+id/visit_lead"
                style="@style/btnStyle"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="Search" />
<!--            <Button-->
<!--                android:id="@+id/search_action"-->
<!--                style="@style/btnStyle"-->
<!--                android:layout_marginTop="@dimen/margin_normal"-->
<!--                android:text="@string/search"-->
<!--                android:textColor="@color/white"-->
<!--                android:background="@drawable/button_bg"-->
<!--                android:layout_gravity="center"-->
<!--                />-->
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>

